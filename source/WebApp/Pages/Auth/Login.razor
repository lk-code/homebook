@page "/login"

<MudPaper Class="d-flex flex-column align-center justify-center" Style="min-height: 60vh; max-width: 400px; margin: auto; padding: 2rem;">
    <MudText Typo="Typo.h4" Class="mb-4">Login</MudText>
    <EditForm Model="loginModel" OnValidSubmit="OnLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <MudTextField @bind-Value="loginModel.Username" Label="Benutzername" Variant="Variant.Filled" Class="mb-3" />
        <MudTextField @bind-Value="loginModel.Password" Label="Passwort" Variant="Variant.Filled" InputType="InputType.Password" Class="mb-4" />
        <MudButton Type="Submit" Variant="Variant.Filled" Color="Color.Primary" FullWidth>Login</MudButton>
    </EditForm>
</MudPaper>

@code {
    private LoginModel loginModel = new();

    private void OnLogin()
    {
        // Noch keine Aktion, sp√§ter POST an Backend
    }

    public class LoginModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}

