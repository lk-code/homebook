@using HomeBook.Frontend.Abstractions.Contracts
@using HomeBook.Frontend.Models.Setup

@inject ISetupService SetupService

<MudCard Class="frosted-b1 mud-elevation-6">

    <MudStepper @ref="_setupStepper"
                Vertical="IsVertical"
                ShowResetButton="false"
                Class="ui-setup-stepper">

        <ChildContent>

            @foreach (SetupStepViewModel step in _setupSteps)
            {
                <MudStep @ref="step.StepRef"
                         Title="@step.Title"
                         Completed="@step.Completed"
                         HasError="@step.HasError"/>
            }

        </ChildContent>

    </MudStepper>

</MudCard>
