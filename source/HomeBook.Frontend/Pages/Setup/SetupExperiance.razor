@page "/Setup"

@layout ContentOnlyLayout

@using HomeBook.Frontend.Abstractions.Contracts

@inject NavigationManager NavigationManager
@inject ISetupService SetupService

<div class="hb-bg-container">
    <div class="wave"></div>
    <div class="wave"></div>
    <div class="wave"></div>
</div>

<MudContainer Class="mt-16 hb-setup-container">

    <MudCard Elevation="10" Class="hb-setup-card">

        <MudCardHeader>

            <CardHeaderContent>
                <MudText Typo="Typo.h3">Setup</MudText>
            </CardHeaderContent>

        </MudCardHeader>

        <MudCardContent>

            <MudHidden Breakpoint="Breakpoint.SmAndDown"
                       Invert="true">

                <MudGrid Class="mt-4">

                    <MudItem xs="12">
                        <UISetupStepper IsVertical="false"
                                        ActiveIndex="_activeIndex"/>
                    </MudItem>

                    <MudItem xs="12">
                        <MudText>Zweiter Text - Mobile Vollbreite</MudText>
                    </MudItem>

                    <MudItem xs="12">
                        <UISetupStepper IsVertical="false"
                                        ActiveIndex="_activeIndex"/>
                    </MudItem>

                </MudGrid>

            </MudHidden>

            <MudHidden Breakpoint="Breakpoint.MdAndUp"
                       Invert="true">

                <MudGrid Class="mt-4">

                    <MudItem md="3">
                        <UISetupStepper IsVertical="true"
                                        ActiveIndex="_activeIndex"/>
                    </MudItem>

                    <MudItem md="9">
                        <MudText>Rechte Spalte - Breiter Inhalt</MudText>
                    </MudItem>

                </MudGrid>

            </MudHidden>

        </MudCardContent>

    </MudCard>

</MudContainer>
