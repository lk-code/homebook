@page "/Setup"

<PageTitle>HomeBook Setup</PageTitle>

@layout ContentOnlyLayout

@inject IConfiguration Configuration

<UIWaveBackground/>

<MudContainer Class="hb-setup-container">

    <MudCard Elevation="10" Class="hb-setup-card frosted-b1 mud-elevation-24 mud-text-primary">

        <MudCardHeader>

            <CardHeaderContent>
                <MudText Typo="Typo.h3">HomeBook Setup</MudText>
            </CardHeaderContent>

        </MudCardHeader>

        <MudCardContent>

            <MudHidden Breakpoint="Breakpoint.SmAndDown"
                       Invert="true">

                <MudGrid Class="mt-4">

                    <MudItem xs="12">
                        <UISetupStepper IsVertical="false"/>
                    </MudItem>

                    <MudItem xs="12">
                        <UISetupContent />
                    </MudItem>

                    <MudItem xs="12">
                        <UISetupStepper IsVertical="false"/>
                    </MudItem>

                </MudGrid>

            </MudHidden>

            <MudHidden Breakpoint="Breakpoint.MdAndUp"
                       Invert="true">

                <MudGrid Class="mt-4">

                    <MudItem md="3">
                        <UISetupStepper IsVertical="true"/>
                    </MudItem>

                    <MudItem md="9">
                        <UISetupContent />
                    </MudItem>

                </MudGrid>

            </MudHidden>

        </MudCardContent>

        <MudCardActions Class="mud-theme-primary px-5">
            Version: @_appVersion - Server: @_appServer
        </MudCardActions>

    </MudCard>

</MudContainer>
